<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smartwire.windows.view.LoginView">
   <children>
      <ImageView fx:id="logo" fitHeight="36.0" fitWidth="36.0" layoutX="185.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true" />

      <Label layoutX="233.0" layoutY="104.0" styleClass="title" text="SMART WIRE">
         <font>
            <Font size="30.0" />
         </font>
      </Label>

      <TextField fx:id="loginEmailTextField" layoutX="175.0" layoutY="159.0" prefHeight="30.0" prefWidth="250.0" promptText="이메일을 입력해주세요." styleClass="input" />

      <PasswordField fx:id="loginPasswordTextField" layoutX="175.0" layoutY="200.0" prefHeight="30.0" prefWidth="250.0" promptText="비밀번호를 입력해주세요." styleClass="input" />
      <Button fx:id="loginButton" layoutX="175.0" layoutY="243.0" mnemonicParsing="false" onAction="#handleLoginButtonClick" prefHeight="30.0" prefWidth="250.0" styleClass="button" text="로그인" />

      <StackPane layoutX="274.0" layoutY="174.0">
         <ProgressIndicator fx:id="progressIndicator" visible="false" />
      </StackPane>
   </children>
</AnchorPane>
